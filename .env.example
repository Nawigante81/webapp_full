# Supabase Configuration
SUPABASE_URL=
SUPABASE_SERVICE_KEY=

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# Scraping Configuration
SCRAPING_RATE_LIMIT_CALLS=5
SCRAPING_RATE_LIMIT_PERIOD=60
SCRAPING_MAX_RETRIES=3
SCRAPING_BACKOFF_FACTOR=1.0
SCRAPING_TIMEOUT=15

# Logging
LOG_LEVEL=INFO

# NBA Season (end year, e.g., 2025 => season 2024-25)
DEFAULT_NBA_SEASON=2025

# Data providers
# Game results provider: BBREF (scrape Basketball-Reference) or NBA_API (official API via nba_api)
GAMES_PROVIDER=BBREF

# Odds provider (reserved for future integrations)
ODDS_PROVIDER=
ODDS_API_KEY=

# RapidAPI (for API-NBA provider)
# Set GAMES_PROVIDER=API_NBA to enable this provider
RAPIDAPI_HOST=api-nba-v1.p.rapidapi.com
RAPIDAPI_KEY=

# Strict provider mode (no fallbacks to scraping or other APIs)
# Set to 1/true to use only RapidAPI providers where implemented
RAPIDAPI_ONLY=0
STRICT_PROVIDER=0

# RapidAPI odds provider (scores/odds)
ODDS_RAPIDAPI_HOST=odds-api1.p.rapidapi.com
ODDS_RAPIDAPI_KEY=
